<% if @articles.empty? %>
  <h1>No articles created yet!</h1>
<% else %>
  <% @articles.each do |a| %>
      <div class="col-md-4">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"><%= link_to a.title, article_path(a) %></h3>
          </div>
          <div class="panel-body">
            <%= a.body.truncate(200) %>
            <p><%= link_to 'Read More', article_path(a), class: 'btn btn-info btn-sm' %></p>
          </div>
        </div>
      </div>
  <% end %>
<% end %>

