<div class="col-md-12">
  <%= form_for [@article, @comment], remote: true, class: 'form-horizontal', role: 'form' do |f| %>
      <% if @comment.errors.any? %>
          <div class="panel panel-danger col-md-offset-1">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%= pluralize(@comment.errors.count, 'error') %>
                prohibited this article from being saved:
              </h3>
            </div>
            <div class="panel-body">
              <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
      <% end %>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body, 'New Comment' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-11">
          <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: 'Enter your comment' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit 'Add Comment', class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
  <% end %>
</div>